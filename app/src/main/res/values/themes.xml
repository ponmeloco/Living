<resources>
    <!-- StartUp Themes -->
    <style name="Theme.NoActionBarStartup" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/opensanslight</item>
        <item name="android:statusBarColor">@color/mimosaYellow</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.NoActionBarMain" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/opensanslight</item>
        <item name="android:statusBarColor">@color/mimosaYellow</item>
    </style>

    <!-- Splash screen Theme -->
    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>